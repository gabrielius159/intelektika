<div class="col-md-4">
  <h5 align="center">Rasti geriausią planą</h5>

  <%= form_tag("/result", method: "post") do %>
    <div class="form-group">


      <%= label_tag(:zinutes, "Žinutės") %>

      <div class="row">
        <div class="col-sm-2">
          Min
        </div>
      <div class="col-sm-8">

      <%= range_field(:best, :zinutes, in: 0..1000, class: 'custom-range', step: 100, value: 0) %>
        <br>
        <span class="badge badge-primary" style="width: 50%; display: block; margin-left: auto; margin-right: auto;">
          <div id='zinutes_js' class="center"></div>
        </span>
      </div>
      <div class="col-sm-2">
        Max
      </div>
      </div>
    </div>

    <div class="form-group">

      <%= label_tag(:pokalbiai, "Pokalbiai") %>
      <div class="row">
        <div class="col-sm-2">
          Min
        </div>
        <div class="col-sm-8">
      <%= range_field(:best, :pokalbiai, in: 0..420, class: 'custom-range', step: 60, value: 0) %>
          <br>
          <span class="badge badge-primary" style="width: 50%; display: block; margin-left: auto; margin-right: auto;">
          <div id='pokalbiai_js' class="center"></div>
            </span>
        </div>
        <div class="col-sm-2">
          Max
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag(:internetas, "Internetas") %>
      <div class="row">
        <div class="col-sm-2">
          Min
        </div>
        <div class="col-sm-8">
          <%= range_field(:best, :internetas, in: 0..11000, class: 'custom-range', step: 1000, value: 0) %>
          <br>
          <span class="badge badge-primary" style="width: 50%; display: block; margin-left: auto; margin-right: auto;">
            <div id='internetas_js' class="center"></div>
          </span>
        </div>
        <div class="col-sm-2">
          Max
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag(:kaina, "Kaina") %>
      <div class="row">
        <div class="col-sm-2">
          Min
        </div>
        <div class="col-sm-8">
          <%= range_field(:best, :kaina, in: 1..15, class: 'custom-range', step: 0.5, value: 1) %>
          <br>
          <span class="badge badge-primary" style="width: 50%; display: block; margin-left: auto; margin-right: auto;">
            <div id='kaina_js' class="center"></div>
          </span>
        </div>
        <div class="col-sm-2">
          Max
        </div>
      </div>
    </div>


    <div class="form-group">
      <input type="submit" placeholder="Rasti" value="Rasti" name="submit" class="btn btn-primary btn-block">
    </div>

  <% end %>
</div>

