<h1 align="center" class="header-text">Sukurkite naują planą</h1>

<div class="col-md-4 offset-md-4">

<%= form_for(@plan, :html => { class: "", role: "form" }) do |f| %>

  <div class="form-group">
    <%= f.label :pavadinimas %>
    <%= f.text_field :pavadinimas, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tinklas %>
    <%= f.text_field :tinklas, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :zinutes, "Žinutės" %>
    <%= f.text_field :zinutes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :pokalbiai %>
    <%= f.text_field :pokalbiai, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :internetas %>
    <%= f.text_field :internetas, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :kaina %>
    <%= f.text_field :kaina, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sukurti naują planą", class: "btn btn-primary btn-block" %>
  </div>

<% end %>

</div>